<h1> <%= @album.title %> </h1>
<a href="<%= new_album_track_url(@album) %>"> Add a Track </a>
<ul>
  <% @tracks.each do |track| %>
  <li>
    <a href="<%= album_track_url(@album, track) %>"> <%= track.title %></a>
    <p> Recording Type: <%= @album.recording_type %></p>

    <form method="POST" action="<%= album_track_url(@album, track) %>">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="_method" value="DELETE">
      <button> Delete </button>
    </form>

  </li>
  <% end %>
</ul>
<a href="<%= band_url(@album.band_id) %>"> << Back to Albums </a>
