<% action_url = @track.persisted? ? track_url(@track) : album_tracks_url(@track.album_id, @track) %>
<% form_method = @track.persisted? ? "PATCH" : "POST" %>
<% submit_text = @track.persisted? ? "Edit Band" : "Create Band" %>

<form method="POST" action="<%= action_url %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="<%= form_method %>">

  <label> Enter a name
    <input type="text" name="track[title]" value="">
  </label>

  <p>
    <label for="track-type"> Recording Type
    <input type="radio" name="track[track_type]" value="Live" <%= "checked" if @track.track_type == "Live"%>> Live
    <input type="radio" name="track[track_type]" value="Studio" <%= "checked" if @track.track_type == "Studio"%>> Studio
    </label>
  </p>

  <input type="hidden" name="track[album_id]" value="<%= @track.album_id %>">
  <button> Submit </button>

</form>
